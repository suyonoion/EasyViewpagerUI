<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <!--3-->
    <LinearLayout
        android:layout_width="wrap_content" android:layout_height="40dip" android:id="@+id/vppublic_linear2"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:clickable="false"
        android:background="#00000000"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip">
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/vppublic_img2"
            android:src="@drawable/number_3_icon_deselected"
            android:background="#00000000"
            android:clickable="false"
            />
    </LinearLayout>
    <!--4-->
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="40dip" android:id="@+id/vppublic_linear3"
        android:gravity="center"
        android:layout_gravity="center_horizontal"

        android:clickable="false"
        android:background="#00000000"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip">
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/vppublic_img3"
            android:src="@drawable/number_4_icon_deselected"
            android:background="#00000000"
            android:clickable="false"
            />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="40dip"
        android:gravity="center"
        android:layout_weight="1">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Judul"
            android:id="@+id/judul"
            android:gravity="center"
            android:textColor="#ffffffff" />
    </LinearLayout>

</LinearLayout>