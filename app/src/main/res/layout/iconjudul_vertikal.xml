<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:gravity="center">
    <!--1-->
    <LinearLayout
        android:layout_width="40dip" android:layout_height="wrap_content" android:id="@+id/vppublic_linear0"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:clickable="false"
        android:background="#00000000"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip">
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/vppublic_img0"
            android:src="@drawable/number_1_icon"
            android:background="#00000000"


             />
    </LinearLayout>
    <!--2-->
    <LinearLayout android:orientation="horizontal" android:layout_width="40dip" android:layout_height="wrap_content" android:id="@+id/vppublic_linear1"
        android:gravity="center"
        android:layout_gravity="center_horizontal"

        android:clickable="false"
        android:background="#00000000"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip">
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/vppublic_img1"
            android:src="@drawable/number_2_icon_deselected"
            android:background="#00000000"


             />
    </LinearLayout>

</LinearLayout>

